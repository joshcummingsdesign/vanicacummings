{% set data = data ? data : organisms.two_column_people %}

<section class="o-two-column-people {{ class }}">
  <div class="container">
    <div class="row">

      {% if data.opt_heading %}
        <div class="col-12 h-mb-md">
          <h2 class="h-h2 h-mb-xxs">{{ data.opt_heading }}</h2>
          {% include "a-hr.twig" %}
        </div>
      {% endif %}

      {% for person in data.people %}
        <div class="col-sm-6 col-md-5 col-lg-4 {{ loop.first ? 'offset-md-1 offset-lg-2': 'h-mt-md h-mt-none@sm' }}">
          <div class="o-two-column-people__person">
              {% include "m-person-image.twig" with { data: { image: person.image } } %}
              {%
                include "m-person-text.twig"
                with {
                  data: {
                    name: person.name,
                    title: person.title,
                    description: person.description,
                    opt_link: person.opt_link,
                    twitter: person.twitter,
                    linkedin: person.linkedin,
                    email: person.email
                  }
                }
            %}
          </div>
        </div>
      {% endfor %}

    </div>

    <div class="row">

      {% if data.opt_button %}
        <div class="o-two-column-people__button h-mt-md">
          {%
            include "a-button.twig"
            with {
              data: {
                url: data.opt_button.url,
                target: data.opt_button.target,
                name: data.opt_button.name
              }
            }
          %}
        </div>
      {% endif %}

    </div>

  </div>
</section>

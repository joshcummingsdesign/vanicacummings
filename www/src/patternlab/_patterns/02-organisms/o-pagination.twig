<section class="o-pagination h-pt-sm h-pb-sm">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <a class="o-pagination__link o-pagination__link--prev" href="{{ pagination.prev.url }}">{{ pagination.prev.name }}</a>
        <a class="o-pagination__link o-pagination__link--next" href="{{ pagination.next.url }}">{{ pagination.next.name }}</a>
      </div>
    </div>
  </div>
</section>

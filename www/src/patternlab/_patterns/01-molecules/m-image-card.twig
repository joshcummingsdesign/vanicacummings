{% set data = data ? data : molecules.image_card %}

{% if data.opt_link %}
<a class="m-image-card" href="{{ data.opt_link.url }}" target="{{ data.opt_link.target }}" style="background-image: url('{{ data.image.src }}');">
{% else %}
<span class="m-image-card" style="background-image: url('{{ data.image.src }}');">
{% endif %}
  {% if data.opt_heading %}
    <p class="m-image-card__text">{{ data.opt_heading }}</p>
  {% else %}
    <p class="m-image-card__text m-image-card__text--hidden">&nbsp;</p>
  {% endif %}
{% if data.opt_link %}
</a>
{% else %}
</span>
{% endif %}
